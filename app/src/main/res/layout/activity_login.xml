<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_bg">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- logo view-->

            <View
                android:id="@+id/logo_here"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <!-- login form-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <!--left icon-->
                <LinearLayout
                    android:background="@drawable/blue_left_corner_bg"
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:src="@drawable/ic_person_black_24dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"/>

                    </LinearLayout>

                    <!--draw bottom border-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6abcec">
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:src="@drawable/ic_https_black_24dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"/>

                    </LinearLayout>

                </LinearLayout>

                <!--right edit text-->
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_userName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:hint="UserName"
                            android:inputType="text"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!--Draw bottom border-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#979797">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edt_pass"
                            android:hint="password"
                            android:textSize="16sp"
                            android:inputType="textPassword"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- botton form-->

            <Button
                android:id="@+id/btn_login"
                style="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:text="login"
                android:textColor="#fff"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/blue_botton_bg"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--register panel-->

            <LinearLayout
                android:id="@+id/register_form"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account>"
                    android:textColor="#80ffff"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/txt_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="just register"
                    android:textColor="#ffffff"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

</ScrollView>