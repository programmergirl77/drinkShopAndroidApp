<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradiant_bg"
    tools:context=".RegisterActivity">


        <LinearLayout
            android:id="@+id/email_login_form"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- logo view-->

            <View
                android:id="@+id/logo_here"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <!-- login form-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <!--left icon-->
                <LinearLayout
                    android:background="@drawable/blue_left_corner_bg"
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:src="@drawable/ic_email_black_24dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"/>

                    </LinearLayout>

                    <!--draw bottom border-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6abcec"> </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:src="@drawable/ic_person_black_24dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"/>

                    </LinearLayout>
                    <!--draw bottom border-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6abcec"> </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:src="@drawable/ic_person_black_24dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"/>

                    </LinearLayout>
                    <!--draw bottom border-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6abcec"> </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:src="@drawable/ic_person_black_24dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"/>

                    </LinearLayout>

                    <!--draw bottom border-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6abcec"> </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:src="@drawable/ic_https_black_24dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"/>

                    </LinearLayout>

                </LinearLayout>

                <!--right edit text-->
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--email-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edt_userName"
                            android:hint="Email"
                            android:textSize="16sp"
                            android:inputType="textEmailAddress"/>
                    </LinearLayout>


                    <!--Draw bottom border-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#979797">
                    </LinearLayout>

                    <!--email-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:hint="FirstName"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Draw bottom border-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#979797">
                    </LinearLayout>

                    <!--email-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_Lastname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:hint="LastName"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!--Draw bottom border-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#979797">
                    </LinearLayout>

                    <!--email-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:hint="UserName"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!--Draw bottom border-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#979797">
                    </LinearLayout>

                    <!--password-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edt_pass"
                            android:hint="password"
                            android:textSize="16sp"
                            android:inputType="textPassword"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- botton form-->

            <Button
                android:id="@+id/btn_register"
                style="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:text="register"
                android:textColor="#fff"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/blue_botton_bg"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--register panel-->

            <LinearLayout
                android:id="@+id/register_form"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="already member ? "
                    android:textColor="#80ffff"
                    android:layout_marginBottom="10dp"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/txt_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="just login"
                    android:textColor="#ffffff"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>


</ScrollView>